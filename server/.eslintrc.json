{
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:@typescript-eslint/recommended",
    "eslint-config-prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".ts"]
      }
    }
  },
  "rules": {
    "quotes": [2, "single", { "avoidEscape": true }],
    "@typescript-eslint/no-empty-function": "off",
    "no-unused-vars": "warn",
    "semi": "error"
  }
}